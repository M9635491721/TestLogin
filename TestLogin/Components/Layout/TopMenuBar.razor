<header id="header" class="header d-flex align-items-center light-background sticky-top">
    <div class="container-fluid position-relative d-flex align-items-center justify-content-between">

        <a href="index.html" class="logo d-flex align-items-center me-auto me-xl-0">
            <!-- Uncomment the line below if you also wish to use an image logo -->
            <!-- <img src="assets/img/logo.png" alt=""> -->
            <h1 class="sitename">Kamruddin</h1>
        </a>

        <nav id="navmenu" class="navmenu">
            <ul>
                <li><a href="/" class="@(ActivePage == "home" ? "active" : "")" @onclick='() => SetActive("home")'>Home</a></li>
                <li><a href="about" class="@(ActivePage == "about" ? "active" : "")" @onclick='() => SetActive("about")'>About</a></li>
                <li><a href="resume" class="@(ActivePage == "resume" ? "active" : "")" @onclick='() => SetActive("resume")'>Resume</a></li>
                @* <li><a href="skills">Services</a></li> *@
                <li><a href="contacts" class="@(ActivePage == "contacts" ? "active" : "")" @onclick='() => SetActive("contacts")'>Contact</a></li>
            </ul>
            <i class="mobile-nav-toggle d-xl-none bi bi-list"></i>
        </nav>

        <div class="header-social-links">
            <a href="#" class="twitter"><i class="bi bi-twitter-x"></i></a>
            <a href="#" class="facebook"><i class="bi bi-facebook"></i></a>
            <a href="#" class="instagram"><i class="bi bi-instagram"></i></a>
            <a href="#" class="linkedin"><i class="bi bi-linkedin"></i></a>
        </div>

    </div>
</header>

@code {
    string ActivePage = "home";
    private void SetActive(string pageName)
    {
        ActivePage = pageName;
    }
}